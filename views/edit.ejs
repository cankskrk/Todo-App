<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo</title>
    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <!-- Font Awesome -->
    <script
      src="https://kit.fontawesome.com/e4ccfd8aaa.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS File -->
    <link rel="stylesheet" href="../public/css/style.css"/>
  </head>
  <body>
    <section class="vh-100 gradient-custom-2">
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-50">
          <div class="col-sm-12 col-md-10 col-xl-8">
            <div class="card mask-custom bg-dark">
              <div class="card-body p-4 text-white">
                <div class="text-center pt-3 pb-2">
                  <div class="navbar d-flex justify-content-start">
                    <a href="/" class="navbar-item h5 text-decoration-none me-4">Tasks</a>
                    <a href="/completed-tasks" class="navbar-item h5 text-decoration-none">Completed Tasks</a>
                  </div>
                  <i class="fa-regular fa-circle-check fa-2xl" alt="Check"></i>
                  <h2 class="my-4">Edit The Task</h2>
                </div>
                <div class="container">
                    <form action="/task-edit/<%= editTask._id %> " method="post">
                        <div class="input-group mt-5">
                          <input
                            type="text"
                            name="task"
                            value="<%= editTask.task %>"
                            class="form-control"
                            autocomplete="off"
                            placeholder="Tasks you will do..."
                            aria-label="Tasks you will do"
                          />
                          <select class="form-select w-25" name="priority">
                            <option selected value="<%= editTask.priority %>"><%= editTask.priority %></option>
                            <option value="Normal">Normal</option>
                            <option value="Low Priority">Low Priority</option>
                          </select>
                          <button class="btn btn-danger ps-4 pe-4" type="submit">
                            Update
                          </button>
                        </div>
                    </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
