<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo</title>
    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <!-- Font Awesome -->
    <script
      src="https://kit.fontawesome.com/e4ccfd8aaa.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS File -->
    <link rel="stylesheet" href="../public/css/style.css" />
  </head>
  <body>
    <section class="vh-100 gradient-custom-2">
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-50">
          <div class="col-sm-12 col-md-10 col-xl-8">
            <div class="card mask-custom bg-dark">
              <div class="card-body p-4 text-white">
                <div class="text-center pt-3 pb-2">
                  <div class="navbar d-flex justify-content-start">
                    <a href="/" class="navbar-item h5 text-decoration-none me-4">Tasks</a>
                    <a href="/completed-tasks" class="navbar-item h5 text-decoration-none">Completed Tasks</a>
                  </div>
                  <i class="fa-regular fa-circle-check fa-2xl" alt="Check"></i>
                  <h2 class="my-4">Task List</h2>
                </div>
                <table class="table text-white mb-0">
                  <thead>
                    <tr>
                      <th scope="col">Task</th>
                      <th scope="col">Priority</th>
                      <th scope="col">Actions</th>
                    </tr>
                  </thead>
                  <% for(let i = 0; i < task.length; i++) { %>
                    <tbody>
                      <tr class="fw-normal">
                        <td class="align-middle">
                          <span><%= task[i].task %> </span>
                        </td>
                        <td class="align-middle">
                          <h6 class="mb-0">
                            <% if(task[i].priority === "High Priority") { %> 
                            <span class="badge bg-danger"
                              ><%= task[i].priority %>
                            </span>
                            <% } else if(task[i].priority === "Low Priority") { %>
                              <span class="badge bg-warning">
                                <%= task[i].priority %>
                              </span>
                            <% } else { %>
                              <span class="badge bg-info">
                                <%= task[i].priority %>
                              </span>
                            <% } %>   
                          </h6>
                        </td>
                        <td class="align-middle">
                          <form action="/doneTask/<%= task[i]._id %>" method="post">
                            <button class="btn" type="submit" data-mdb-toggle="tooltip" title="Done">
                              <i class="fas fa-check fa-lg text-success me-4"></i>
                            </button>
                          </form>
                          <form action="" method="post">
                            <button class="btn" type="submit" data-mdb-toggle="tooltip" title="Remove">
                              <i class="fas fa-solid fa-trash fa-lg text-warning me-4"></i>
                            </button>
                          </form>
                          <form action="" method="post">
                            <button class="btn" type="submit" data-mdb-toggle="tooltip" title="Edit">
                              <i class="fa-solid fa-pen-to-square fa-lg text-primary"></i>
                            </button>
                          </form>
                        </td>
                      </tr>
                    </tbody>
                  <% } %>
                </table>
              </div>
            </div>
            <div>
              <form action="/" method="post">
                <div class="input-group mt-5">
                  <input
                    type="text"
                    name="task"
                    class="form-control"
                    autocomplete="off"
                    placeholder="Tasks you will do..."
                    aria-label="Tasks you will do"
                  />
                  <select class="form-select w-25" name="priority">
                    <option selected>Choose a Priority</option>
                    <option value="High Priority">High Priority</option>
                    <option value="Normal">Normal</option>
                    <option value="Low Priority">Low Priority</option>
                  </select>
                  <button class="btn btn-danger ps-4 pe-4" type="submit">
                    Add
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
