<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo</title>
    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <!-- Font Awesome -->
    <script
      src="https://kit.fontawesome.com/e4ccfd8aaa.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS File -->
    <link rel="stylesheet" href="../public/css/style.css"/>
  </head>
  <body>
    <section class="vh-100 gradient-custom-2">
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-50">
          <div class="col-sm-12 col-md-10 col-xl-8">
            <div class="card mask-custom bg-dark">
              <div class="card-body p-4 text-white">
                <div class="text-center pt-3 pb-2">
                  <div class="navbar d-flex justify-content-start">
                    <a href="/" class="navbar-item h5 text-decoration-none me-4">Tasks</a>
                    <a href="/completed-tasks" class="navbar-item h5 text-decoration-none">Completed Tasks</a>
                  </div>
                  <i class="fa-regular fa-circle-check fa-2xl" alt="Check"></i>
                  <h2 class="my-4">Completed Task List</h2>
                </div>

                <table class="table text-white mb-0">
                  <thead>
                    <tr>
                      <th scope="col">Task</th>
                      <th scope="col">Priority</th>
                      <th scope="col">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i = 0; i < completedtask.length; i++) { %> 
                      <tr class="fw-normal">
                        <td class="align-middle">
                          <span><%= completedtask[i].task %></span>
                        </td>
                        <% if(completedtask[i].priority === "High Priority") { %> 
                          <td class="align-middle">
                            <h6 class="mb-0">
                              <span class="badge bg-danger"><%= completedtask[i].priority %> </span>
                            </h6>
                          </td>
                        <% } else if(completedtask[i].priority === "Low Priority") { %>
                          <td class="align-middle">
                            <h6 class="mb-0">
                              <span class="badge bg-warning"><%= completedtask[i].priority %> </span>
                            </h6>
                          </td>
                        <% } else {%>
                          <td class="align-middle">
                            <h6 class="mb-0">
                              <span class="badge bg-info"><%= completedtask[i].priority %> </span>
                            </h6>
                          </td>
                        <% } %> 
                        <td class="align-middle">
                          <form action="/completed-tasks-restore/<%= completedtask[i]._id %>" method="post">
                            <button class="btn" type="submit" data-mdb-toggle="tooltip" title="Restore">
                              <i class="fa-solid fa-rotate-left fa-lg text-success"></i>
                            </button>
                          </form>
                        </td>
                      </tr>
                    <% } %> 
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
